{
    "name": "hereldar/results",
    "type": "library",
    "description": "Allows to handle the results in the most convenient way.",
    "keywords": ["result", "results", "result type", "hereldar"],
    "license": "MIT",
    "support": {
        "issues": "https://github.com/hereldar/php-results/issues",
        "source": "https://github.com/hereldar/php-results"
    },
    "authors": [
        {
            "name": "Samuel Maudo",
            "email": "samuelmaudo@gmail.com",
            "homepage": "https://github.com/samuelmaudo"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "php-coveralls/php-coveralls": "^2.5",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Hereldar\\Results\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hereldar\\Results\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "coveralls": "php vendor/bin/php-coveralls --coverage_clover=coverage/report.xml -v",
        "phpcs": "tools/php-cs-fixer/vendor/bin/php-cs-fixer fix -v --diff --dry-run",
        "phpstan": "tools/phpstan/vendor/bin/phpstan analyse --configuration phpstan.neon",
        "phpunit": "vendor/bin/phpunit --verbose",
        "psalm": "tools/psalm/vendor/bin/psalm",
        "code-quality": [
            "@phpcs",
            "@phpstan",
            "@psalm"
        ],
        "test": [
            "@phpunit",
            "@code-quality"
        ]
    }
}
